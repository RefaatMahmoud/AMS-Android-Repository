<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

///////////////////Lecture name
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearDialog"
       android:orientation="vertical"
        android:visibility="visible"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0d0d0d"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="10dp"
            android:layout_marginRight="200dp"
            />
        <TextView
            android:id="@+id/dialog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lecture Name"
            android:textColor="#4cb7ff"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="100dp"
            />

    </RelativeLayout>

    /////////////////////////// time

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0d0d0d"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_image_time"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/start_time"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/dialog_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="time"
            android:textColor="#4cb7ff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="100dp"
            />
    </RelativeLayout>

    ///////////////////////period

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0d0d0d"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_image_Period"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/time"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/dialog_Period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3:00 pm"
            android:textColor="#4cb7ff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="100dp"
            />


    </RelativeLayout>
/////////////////////////marks

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0d0d0d"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_image_marks"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/marks"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/dialog_marks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100 Marks"
            android:textColor="#4cb7ff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="100dp"
            />


    </RelativeLayout>
///////////////////////////place

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0d0d0d"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_image_place"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/attendance_place"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/dialog_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hall 3"
            android:textColor="#4cb7ff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="100dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0d0d0d"
        android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/button_dialog"
        android:text="OK"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:background="#4cb7ff"
        android:layout_marginBottom="10dp"
        />

    </RelativeLayout>


    </LinearLayout>


</LinearLayout>