<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="#000000"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:id="@+id/image_std"
        android:paddingLeft="10dp"
        android:src="@drawable/compbnr_01" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/image_std"
        android:layout_toRightOf="@+id/image_std"
        android:text="@string/student"
        android:textSize="16dp"
        android:id="@+id/student_name"
        android:textColor="#00ABFA" />

    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="@string/pause"
        android:textSize="12dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button2"
        android:layout_alignBottom="@+id/image_std"
        android:layout_alignLeft="@+id/student_name"
        android:layout_alignStart="@+id/student_name"
        android:id="@+id/pause" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:thumb="@drawable/switch_style"
        android:track="@drawable/track_style"
        android:background="@drawable/switch_background"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:enabled="true"
        android:id="@+id/switch1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/switch1"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/switch1"
        android:layout_toStartOf="@+id/switch1"
        android:text="@string/active"
        android:textColor="#0c5272"
        android:id="@+id/status"
        android:textSize="18dp" />

    <View
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#00ABFA"></View>

</RelativeLayout>